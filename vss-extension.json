{
    "manifestVersion": 1,
    "id": "werf",
    "name": "Werf Tools",
    "version": "0.0.16",
    "publisher": "IgorMoiseev",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Launch werf commands to your helm packages.",
    "categories": [        
        "Build and Release"
    ],
    "tags": [
        "kubernetes",
        "werf",
        "helm"
      ],
    "public":true,
    "content": {
        "details": {
            "path": "README.md"
        },
        "license":{
            "path":"LICENSE"
        }        
    },
    "icons": {
        "default": "images/werf-logo.png"
    },
    "files": [
        {
            "path": "werf"
        }
    ],
    "contributions": [
        {
            "id": "werf-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "werf"
            }
        }
    ]
}